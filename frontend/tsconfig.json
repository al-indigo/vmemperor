{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable","es5","es6","es7","es2017", "es2017.intl", "es2018", "es2018.promise"],
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "forkChecker": true,
    "useCache": false
  }
}
